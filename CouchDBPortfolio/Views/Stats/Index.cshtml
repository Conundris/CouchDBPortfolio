@model IEnumerable<StatsModel>

@{
    ViewBag.Title = "Stats";
}

<h2>Tasks</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Section)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Key)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(model => item.Section)
            </td>
            <td>
                @Html.DisplayFor(model => item.Key)
            </td>
            <td>
                @Html.DisplayFor(model => item.Value)
            </td>
        </tr>
    }
</table>